{
  "name": "devport",
  "version": "0.1.0",
  "private": true,
  "description": "Mobile-first AI programming platform",
  "scripts": {
    "dev": "concurrently -n web,server -c blue,green \"npm run dev:web\" \"npm run dev:server\"",
    "dev:web": "cd web && npm run dev",
    "dev:server": "cd server && go run .",
    "build": "npm run build:web && npm run build:server",
    "build:web": "cd web && npm run build",
    "build:server": "cd server && go build -o devport .",
    "lint": "cd web && npm run lint"
  },
  "devDependencies": {
    "concurrently": "^9.1.0"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
